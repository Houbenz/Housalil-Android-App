<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/colorPrimary</item>
    </style>

    <style name="ButtonColor" parent="Base.Widget.AppCompat.ActionButton">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="ButtonColorModifier" parent="Base.Widget.AppCompat.ActionButton">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="numberPickerHour" parent="@android:style/Widget.Material.Light.NumberPicker" tools:targetApi="n">
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RatingBar" parent="Theme.AppCompat">
        
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/textColor</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>

    </style>
</resources>
