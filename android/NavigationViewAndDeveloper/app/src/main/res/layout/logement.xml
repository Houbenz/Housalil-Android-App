<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="190dp"
    android:layout_height="300dp"
    android:layout_margin="10dp"
    android:clipToPadding="false"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="16dp"
        android:theme="@style/AppTheme">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_for_griditem"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageL"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="2dp"
            android:layout_weight="7"
            android:background="@drawable/ad"
            app:srcCompat="@drawable/apartement" />


        <View
            style="@style/divider"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/typeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="type" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="F1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <View
            style="@style/divider"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/logementTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Logement" />

        <TextView
            android:id="@+id/logement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="b11c235s"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <View
            style="@style/divider"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/localiteTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="localite" />

        <TextView
            android:id="@+id/localite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="1600 khroub"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
    </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>